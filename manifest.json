{
  "name": "QuickSnap",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Manage Screenshots",
  "homepage_url": "https://bit.ly/ScreenshotManager",
  "background": {
    "scripts": [
      "background.js","jquery.js"
    ],
    "persistent": true
  },
  "icons": { "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
   "128": "icons/icon128.png" },
  
  "browser_action": {
    "default_icon": {
      "19": "icons/icon24.png",
      "38": "icons/icon32.png"
    },
	"default_popup": "popup.html",
    "default_title": "Screenshot!"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "<all_urls>",
    "activeTab",
    "downloads",
    "tabs"
  ],
  "content_scripts": [ 
	{ 
		"js": [ "jquery.js"],
		 "matches": [ "http://*/*", "https://*/*"]
	 }
 ]
}
